@model IEnumerable<Categoria>

@{
    ViewData["Title"] = "Category Page";
    ViewBag.Subtitulo = "Listagem de Categorias";
}


<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewBag.Subtitulo</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Cadastrar" class="btn btn-sm btn-outline-secondary"> <i class="bi bi-plus-circle"></i> &nbsp;Nova
            Categoria</a>
    </div>
</div>



@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped tabela-categoria">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Nome
                    </td>
                    <td>
                        @item.Descricao
                    </td>
                    <td>
                        <a asp-action="Cadastrar" asp-route-id="@item.Id" class="btn btn-sm btn-secondary"><i class="bi-pencil"
                                title="Alterar"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi-trash"
                                title="Delete"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhuma categoria cadastrada.</p>
}
